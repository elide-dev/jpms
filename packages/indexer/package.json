{
  "name": "@javamodules/indexer",
  "version": "1.0.2",
  "private": true,
  "description": "Generates JSON indexes for Maven repositories.",
  "keywords": [
    "java",
    "maven",
    "maven-repository",
    "jvm"
  ],
  "bugs": {
    "url": "https://github.com/elide-dev/jpms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elide-dev/jpms",
    "directory": "packages/indexer"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Sam Gammon",
    "url": "https://github.com/sgammon"
  },
  "type": "module",
  "imports": {
    "#tests": {
      "bun": "bun:test",
      "default": "@jest/globals"
    }
  },
  "main": "dist/indexer.mjs",
  "files": [
    "dist/**",
    "!dist/*test*",
    "!dist/tests"
  ],
  "scripts": {
    "build": "tsc -p .",
    "index": "bun run build && bun dist/indexer.mjs ../../repository",
    "pack": "npm pack",
    "publish:dry": "npm publish --no-git-checks --dry-run",
    "publish:live": "npm publish --no-git-checks",
    "test:bun": "bun test",
    "test:node": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "reports",
    "coverageProvider": "v8",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "preset": "ts-jest",
    "reporters": [
      "default",
      "github-actions",
      [
        "jest-junit",
        {
          "outputDirectory": "reports",
          "outputName": "report.xml"
        }
      ]
    ],
    "testMatch": [
      "<rootDir>/tests/*.test.ts"
    ]
  },
  "dependencies": {
    "@endo/zip": "1.0.2",
    "@javamodules/gradle": "workspace:*",
    "@javamodules/java": "workspace:*",
    "@javamodules/maven": "workspace:*",
    "chalk": "5.3.0",
    "commander": "12.0.0",
    "glob": "10.3.10",
    "inquirer": "9.2.16"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.29",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "semver": "7.6.0",
    "ts-jest": "29.1.2",
    "typescript": "5.4.2"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
